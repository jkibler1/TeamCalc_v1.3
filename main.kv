#:import Factory kivy.factory.Factory

<mySpinner@SpinnerOption>:
    size_hint_y: None
    height: dp(25)
<myFilter@SpinnerOption>:
    size_hint_y: None
    height: dp(20)
    font_size: sp(10)
    #on_press: self.filter_press() would prefer something like this to on_text, to show Filtering status

<MyLayout>:
    type1_input1: type1_input1
    type2_input1: type2_input1
    type1_input2: type1_input2
    type2_input2: type2_input2
    type1_input3: type1_input3
    type2_input3: type2_input3
    type1_input4: type1_input4
    type2_input4: type2_input4
    type1_input5: type1_input5
    type2_input5: type2_input5
    gen_input: gen_input
    tsize_input: tsize_input
    #old_filter_input: old_filter_input #can remove from here and script?
    new_filter_input: new_filter_input
    submit: submit
    remove2: remove2
    remove3: remove3
    remove4: remove4
    remove5: remove5
    addT: addT
    #revert: revert
    status: status
    rsort: rsort
    #psort: psort
    wsort: wsort
    usort: usort
    orientation: "vertical"

    #row1 title/status
    GridLayout:
        canvas.before:
            Color:
                rgba: (247/255.0,178/255.0,209/255.0,1) # better pink color to fit branding
                # rgba: (255/255.0,230/245.0,200/240.0,.9)
            Rectangle:
                pos: self.pos
                size: self.size
        cols: 2
        size_hint: 1, None
        size_hint_y: None
        height: dp(25)

        Label:
            text: " PokeTeamCalc - v1.3"
            size_hint_x: None
            width: dp(150)
            halign: "left"
            text_size: self.size
            color: (80/255.0,0/255.0,0/255.0,1)
            bold: True
        Label:
            id: status
            text: '< Initialized. Select and submit types! >'
            font_size: sp(10)
            halign: "right"
            text_size: self.size
            #shorten: True
            #split_str: ' '
            #max_lines: 2
            padding_x: dp(2)
            color: (0,0,0,1)

    #row2 etc options
    GridLayout:
        canvas.before:
            Color:
                rgba: (1,1,1,.9)
            Rectangle:
                pos: self.pos
                size: self.size
        cols: 7
        size_hint: 1, None
        size_hint_y: None
        height: dp(25)

        Label:
            text: "Team Size:"
            color: (0,0,0,1)
            font_size: sp(10)
            size_hint_x: None
            width: dp(60)
        Spinner:
            id: tsize_input
            text: "3" # default
            values: ["2", "3", "4", "5", "6"]
            on_text: root.tsizespinner_clicked(tsize_input.text)
            #background_color: (0,0,0,1)
            size_hint_x: None
            width: dp(35)
        Label:
            text: "Generation:"
            color: (0,0,0,1)
            font_size: sp(10)
            #size_hint_x: None
            #width: dp(70)
        Spinner:
            id: gen_input
            text: "8" # default latest gen, number or string?
            values: ["1", "2", "3", "4", "5", "6", "7", "8"]
            on_text: root.genspinner_clicked(gen_input.text)
            #background_color: (0,0,0,1)
            size_hint_x: None
            width: dp(35)
        Label:
            id: gen_label
            markup: True
            text: "[i]SwSh BDSP PLA[/i]"
            font_size: sp(10)
            text_size: self.size
            #halign: "left"
            valign: "middle"
            #size_hint_x: None
            color: (0,0,0,1)
            width: dp(150)
            padding_x: dp(5)
        Label:
            text: "Exclude unused:" # typings:"
            color: (0,0,0,1)
            font_size: sp(10)
            text_size: self.size
            halign: "right"
            valign: "middle"
            #size_hint_x: None
            #width: dp(100)
        CheckBox:
            active: True
            on_active: root.exclude_clicked(self, self.active)
            size_hint_x: None
            color: (0,0,0,1)
            width: dp(35)

